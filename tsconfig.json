{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"],
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "noUnusedLocals": false
  },
  "include": ["src/**/*", "src/**/*.vue", "*.ts", "config/utils/markdown-it-custom-code.ts"],
  "exclude": ["node_modules"]
}
